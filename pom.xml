<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <description>Columbus - geo ip service</description>

    <parent>
        <groupId>com.rbkmoney</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>1.4.0.RELEASE</version>
    </parent>

    <groupId>com.rbkmoney.columbus</groupId>
    <artifactId>columbus</artifactId>
    <version>1.0.0</version>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <columbus.db.url>jdbc:postgresql://localhost:5432/columbus</columbus.db.url>
                <columbus.db.user>postgres</columbus.db.user>
                <columbus.db.password>postgres</columbus.db.password>
                <columbus.db.schema>clb</columbus.db.schema>
                <flyway.db.url>${columbus.db.url}</flyway.db.url>
                <flyway.user>${columbus.db.user}</flyway.user>
                <flyway.password>${columbus.db.password}</flyway.password>
                <bm.pooling.url>http://localhost:8081/repo</bm.pooling.url>
                <bm.pooling.limit>10</bm.pooling.limit>
                <geo.db.file.path>file:///Users/alexeysemenkov/soft/GEO_DATABASES/GeoLite2-City.mmdb</geo.db.file.path>
            </properties>
        </profile>
        <profile>
            <id>ci</id>
            <properties>
                <mst.db.url>jdbc:postgresql://${db.url.host.name}:5432/magista</mst.db.url>
                <mst.db.user>postgres</mst.db.user>
                <mst.db.password>postgres</mst.db.password>
                <mst.db.schema>mst</mst.db.schema>
                <db.url.host.name>mst_db</db.url.host.name>
                <flyway.db.url>${mst.db.url}</flyway.db.url>
                <flyway.user>${mst.db.user}</flyway.user>
                <flyway.password>${mst.db.password}</flyway.password>
                <bm.pooling.url>http://locahost:8080</bm.pooling.url>
                <bm.pooling.limit>10</bm.pooling.limit>
                <geo.db.file.path>./GeoLite2-City.mmdb</geo.db.file.path>
            </properties>
        </profile>
    </profiles>


    <dependencies>
        <!--Thrirdparty libs-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-jdbc</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.zaxxer</groupId>
            <artifactId>HikariCP</artifactId>
        </dependency>
        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
        </dependency>
        <dependency>
            <groupId>com.maxmind.geoip2</groupId>
            <artifactId>geoip2</artifactId>
            <version>2.8.0-rc1</version>
        </dependency>

        <!--RBK libs-->
        <dependency>
            <groupId>com.rbkmoney.dbinit</groupId>
            <artifactId>dbinit</artifactId>
            <version>0.1.0</version>
        </dependency>
        <dependency>
            <groupId>com.rbkmoney</groupId>
            <artifactId>eventstock-client</artifactId>
            <version>1.0.3</version>
        </dependency>
        <dependency>
            <groupId>com.rbkmoney</groupId>
            <artifactId>damsel</artifactId>
            <version>fb43ca0</version>
        </dependency>
        <dependency>
            <groupId>javafx</groupId>
            <artifactId>jfxrt</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>
        <!--Test libs-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>${project.basedir}</directory>
                <targetPath>${project.build.directory}</targetPath>
                <includes>
                    <include>Dockerfile</include>
                </includes>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>ru.concerteza.buildnumber</groupId>
                <artifactId>maven-jgit-buildnumber-plugin</artifactId>
                <version>1.2.9</version>
                <executions>
                    <execution>
                        <id>git-buildnumber</id>
                        <goals>
                            <goal>extract-buildnumber</goal>
                        </goals>
                        <phase>generate-resources</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>


    </build>


</project>
