<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <description>Columbus - geo ip service</description>

    <parent>
        <groupId>com.rbkmoney</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>1.4.0.RELEASE</version>
    </parent>

    <groupId>com.rbkmoney.columbus</groupId>
    <artifactId>columbus</artifactId>
    <version>1.0.1</version>

    <properties>
        <server.port>8022</server.port>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <postgresql.jdbc.version>9.4.1208</postgresql.jdbc.version>
        <flyway.version>4.0.3</flyway.version>
        <jooq.version>3.8.4</jooq.version>
        <dockerfile.Template>GENERATED DOCKER FILE</dockerfile.Template>
        <dockerfile.base.service.tag>70f9fa4ba9bb06cc36b292862ab0555f3bad6321</dockerfile.base.service.tag>
        <dockerfile.build.container.tag>UNDEFINED</dockerfile.build.container.tag>
    </properties>

    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <columbus.db.url>jdbc:postgresql://localhost:5432/columbus</columbus.db.url>
                <columbus.db.user>postgres</columbus.db.user>
                <columbus.db.password>postgres</columbus.db.password>
                <columbus.db.schema>clb</columbus.db.schema>
                <flyway.db.url>${columbus.db.url}</flyway.db.url>
                <flyway.user>${columbus.db.user}</flyway.user>
                <flyway.password>${columbus.db.password}</flyway.password>
                <geo.db.file.path>file:${project.basedir}/geo_data/GeoLite2-city.mmdb</geo.db.file.path>
            </properties>
        </profile>
        <profile>
            <id>ci</id>
            <properties>
                <columbus.db.url>jdbc:postgresql://clbdb:5432/columbus</columbus.db.url>
                <columbus.db.user>postgres</columbus.db.user>
                <columbus.db.password>postgres</columbus.db.password>
                <columbus.db.schema>clb</columbus.db.schema>
                <flyway.db.url>${columbus.db.url}</flyway.db.url>
                <flyway.user>${columbus.db.user}</flyway.user>
                <flyway.password>${columbus.db.password}</flyway.password>
                <!--todo: change to correct name-->
                <geo.db.file.path>file://var/geodata/GeoLite2-city.mmdb</geo.db.file.path>
            </properties>
        </profile>
    </profiles>


    <dependencies>
        <!--Thrirdparty libs-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-jdbc</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.zaxxer</groupId>
            <artifactId>HikariCP</artifactId>
        </dependency>
        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
        </dependency>
        <dependency>
            <groupId>com.maxmind.geoip2</groupId>
            <artifactId>geoip2</artifactId>
            <version>2.8.0-rc1</version>
        </dependency>

        <dependency>
            <groupId>org.jooq</groupId>
            <artifactId>jooq</artifactId>
            <version>${jooq.version}</version>
        </dependency>

        <dependency>
            <groupId>org.flywaydb</groupId>
            <artifactId>flyway-core</artifactId>
            <version>${flyway.version}</version>
        </dependency>

        <!--RBK libs-->
        <dependency>
            <groupId>com.rbkmoney</groupId>
            <artifactId>dbinit</artifactId>
            <version>1.0.5</version>
        </dependency>
        <dependency>
            <groupId>com.rbkmoney</groupId>
            <artifactId>eventstock-client</artifactId>
            <version>1.0.3</version>
        </dependency>
        <dependency>
            <groupId>com.rbkmoney</groupId>
            <artifactId>damsel</artifactId>
            <version>1.99-557f549</version>
        </dependency>
        <dependency>
            <groupId>javafx</groupId>
            <artifactId>jfxrt</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>
        <!--Test libs-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>${project.basedir}</directory>
                <targetPath>${project.build.directory}</targetPath>
                <includes>
                    <include>Dockerfile</include>
                    <include>containerpilot.json</include>
                </includes>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>ru.concerteza.buildnumber</groupId>
                <artifactId>maven-jgit-buildnumber-plugin</artifactId>
                <version>1.2.9</version>
                <executions>
                    <execution>
                        <id>git-buildnumber</id>
                        <goals>
                            <goal>extract-buildnumber</goal>
                        </goals>
                        <phase>generate-resources</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>


    </build>


</project>
